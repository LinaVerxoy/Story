<Window x:Class="LittleDragon.SeriesSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LittleDragon"
        mc:Ignorable="d"
        Title="SeriesSelectionWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Выберите серию" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <Button Content="1 серия" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="FirstSeriesButton_Click"/>
        <Button Content="2 серия" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="100" Click="SecondSeriesButton_Click" IsEnabled="{Binding IsFirstSeriesCompleted}"/>
    </Grid>
</Window>
